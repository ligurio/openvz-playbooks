NameVirtualHost *:80
NameVirtualHost *:443

<VirtualHost *:80>
 ServerName		download.openvz.org
 ServerAlias	download.openvz.org
 ServerAdmin	sergeyb@openvz.org

 DocumentRoot	{{ download_destination }}
</VirtualHost>

<VirtualHost *:443>
 ServerName		download.openvz.org
 ServerAlias	download.openvz.org
 ServerAdmin	sergeyb@openvz.org

 DocumentRoot	{{ download_destination }}

 SSLEngine on
 SSLProtocol all -SSLv2 -SSLv3
 SSLCertificateFile /etc/pki/tls/certs/openvz.org.crt
 SSLCertificateKeyFile /etc/pki/tls/private/openvz.org.key
 SSLCertificateChainFile /etc/pki/tls/certs/essential.ca-bundle
</VirtualHost>

<VirtualHost *:443>
 ServerName		us.download.openvz.org
 ServerAlias	us.download.openvz.org
 ServerAdmin	sergeyb@openvz.org

 DocumentRoot	{{ download_destination }}

 SSLEngine on
 SSLProtocol all -SSLv2 -SSLv3
 SSLCertificateFile /etc/pki/tls/certs/download.openvz.org.crt
 SSLCertificateKeyFile /etc/pki/tls/private/download.openvz.org.key
 SSLCertificateChainFile /etc/pki/tls/certs/essential.ca-bundle
</VirtualHost>
